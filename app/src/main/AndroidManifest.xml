<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eliminator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Eliminator">
        <activity android:name=".activities.AboutUs" android:launchMode="singleTask"></activity>
        <activity android:name=".activities.Contact_Us" android:launchMode="singleTask"/>
        <activity android:name=".activities.T_And_C" android:launchMode="singleTask"/>
        <activity android:name=".activities.Refer_Earn" android:launchMode="singleTask" />
        <activity android:name=".activities.Profile" android:launchMode="singleTask" />
        <activity android:name=".activities.Welcome_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Wallet" android:launchMode="singleTask"/>
        <activity android:name=".activities.Matches" />
        <activity
            android:name=".activities.Home"
            android:launchMode="singleTask" />
        <activity android:name=".activities.Register"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.Login"
            android:launchMode="singleTask"/>
    </application>

</manifest>